<div class="container">
    <div class="page-title">
        <h1>¡Registrate!</h1>
        <h2>Es rápido y fácil.</h2>
    </div>

    <div class="form-container">
        <form action="" id="signupForm" enctype="multipart/form-data">
            <div>
                <label for="">Nombre</label>
                <input type="text" name="first_name" required>
            </div>
            <div>
                <label for="">Apellido</label>
                <input type="text" name="last_name" required>
            </div>
            <div>
                <label for="">Edad</label>
                <input type="number" name="age" required>
            </div>
            <div>
                <label for="">Correo electrónico</label>
                <input type="email" name="email" required>
            </div>
            <div>
                <label for="">Contraseña</label>
                <input type="password" name="password" required>
            </div>
            <div>
                <label for="image">Puede subir una foto de perfil (opcional)</label>
                <input type="file" name="image" accept="image/png, image/jpeg">
            </div>

            <div class="notification" id="notif"></div>

            <button class="submitButton" type="submit">Registrarte</button>
        </form>
    </div>
    <div class="foot">
        <p class="p-info">¿Ya tenés una cuenta? Ingresá <a href="/login">aquí</a>.</p>
    </div>
</div>

<script src="/js/signup.js"></script>